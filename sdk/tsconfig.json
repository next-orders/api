{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": ["./**/*.ts", "./tests/**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
